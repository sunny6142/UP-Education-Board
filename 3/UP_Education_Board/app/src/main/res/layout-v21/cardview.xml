<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="130dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        card_view:cardCornerRadius="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:id="@+id/lay">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:id="@+id/sideimage"
                android:layout_alignParentStart="true"

                android:src="@color/caldroid_333"/>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:layout_toRightOf="@+id/sideimage"
              android:background="#45e0af"
              android:id="@+id/titlestart"
              android:textAlignment="center">
              <TextView
                  android:id="@+id/title"
                  android:layout_width="wrap_content"
                  android:layout_height="30dp"
                  android:text="Subject"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:paddingTop="2dp"
                  android:paddingBottom="2dp"
                  android:layout_alignParentStart="true"
                  android:gravity="center_vertical"
                  android:textColor="@android:color/white"
                  android:textSize="20dp"
                  />


          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_toRightOf="@+id/sideimage"
              android:layout_below="@id/titlestart">
              <TextView
                  android:id="@+id/txtSurname"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Title"
                  android:gravity="center"
                  android:textSize="15dp"
                  android:textColor="@android:color/holo_green_dark"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="5dp"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:paddingTop="2dp"
                  android:paddingBottom="2dp"
                  android:textStyle="normal|bold" />

              <TextView
                  android:id="@+id/txtEmail"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="SubTitle"
                  android:textSize="13dp"
                  android:textColor="@android:color/holo_red_dark"
                  android:layout_marginTop="10dp"
                  android:layout_below="@+id/txtSurname"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:paddingTop="2dp"
                  android:paddingBottom="2dp"
                  android:gravity="center"
                  android:textStyle="normal|bold" />
              <TextView
                  android:id="@+id/txtName"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:paddingTop="5dp"
                  android:paddingBottom="2dp"
                  android:layout_below="@+id/txtEmail"
                  android:text="Date"
                  android:textSize="11dp"
                  android:textAlignment="viewEnd" />

          </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>